/* miniprogram/pages/index/myPost.wxss */
page{
}
.container{
  display: flex;
  flex-direction: column;
  min-height: 105vh;
}
.title{
  align-self: flex-start;
  padding: 0 6rpx 6rpx 6rpx;
  margin: 10rpx 4vw 10rpx 4vw;
  font-size: 48rpx;
}
.author{
  display: flex;
  align-items: center;
  align-self: flex-start;
  height: 8vh;
  margin: 3vw 0 0 4vw;
  font-size: 28rpx;
}
.author .portrait{
  width: 10vw;
  border-radius: 50%;
  margin: 0 20rpx 0 10rpx;
  font-size: 28rpx;
}
.author .nickname{
  margin: 0 20rpx 0 0;
  color: rgb(39, 96, 202);
}
.author .date{
  color: rgb(182, 182, 182);
}
.main-content{
  display: flex;
  flex-direction: column;
  margin: 0rpx 4vw 10vh 4vw;
  align-items: center;
  width: 91vw;
}
.main-content .node{
  width: 100%;
}
.main-content .node .text-box{
  width: 100%;
  padding: 1vh 0 1vh 0;
  text-indent: 0rpx;
}
.main-content .node .image-box{
  width: 90%;
  padding: 1vh 0 1vh 0;
}
.main-content .text-box .text{
  font-size: 36rpx;
}
.main-content .image-box .image{
  width: 100%;
}
.bottom-tools{
  border-top: solid .5px rgb(244, 244, 244);
  width: 100vw;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 9999;
  background-color: #fff;
}
.bottom-tools .bottom-button{
  height: 9vw;
  padding: 5rpx 5rpx 5rpx 5rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 10rpx 10rpx 10rpx;
  background-color: #fff;
}
.bottom-tools .bottom-button::after{
  border: none;
}
.bottom-tools .bottom-button .reply-box{
  display: flex;
  height: 9vw;
  width: 58vw;
  justify-content: center;
  align-items: center;
  background-color: rgb(244, 244, 244);
  border-radius: 10rpx;
}
.bottom-tools .bottom-button .reply-box .reply{
  color: rgb(182, 182, 182);
  font-size: 4vw;
  align-items: center;
}
.bottom-tools .bottom-button .heart{
  height: 6vw;
  width: 6vw;
}
.bottom-tools .bottom-button .collect{
  height: 6vw;
  width: 6vw;
}
.bottom-tools .bottom-button .share{
  height: 6vw;
  width: 6vw;
}
.bottom-tools .bottom-button .report{
  height: 6vw;
  width: 6vw;
}
.reply-zone{
  display: flex;
  flex-wrap: wrap;
  margin: 0rpx 10rpx 0 10rpx;
  border-top: solid 10px rgb(244, 244, 244);
  justify-content: center;
  align-items: center;
  width: 100vw;
}
.reply-zone .zone-title{
  text-align: center;
  padding: 6rpx 6rpx 6rpx 6rpx;
  margin: 10rpx 0 10rpx 0;
  font-size: 32rpx;
  width: 100vw;
}
.reply-zone .content{
  display: flex;
  width: 100vw;
  padding: 2vh 2vh 0 2vh;
  border-top: solid 1rpx rgb(244, 244, 244);
}
.reply-zone .content .portrait-box{
  width: 12%;
  padding: 0 2vh 0 0;
}
.reply-zone .content .portrait{
  width: 90%;
  border-radius: 50%;
}
.reply-zone .content .main{
  display: flex;
  flex-direction: column;
  width: 88%;
}
.reply-zone .content .main .nickname{
  height: 3vh;
  font-size: 28rpx;
  color: rgb(39, 96, 202)
}
.reply-zone .content .main .text{
  padding: .5vh 0 0 0;
  font-size: 28rpx;
}
.reply-zone .content .main .bottom{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 3vh;
  padding: 1vh 0 .5vh 0;
}
.reply-zone .content .main .bottom .date{
  font-size: 24rpx;
  color: rgb(182, 182, 182);
  flex-grow: 1;
}
.reply-zone .content .main .bottom .button{
  height: 3vh;
  display: flex;
  align-items: center;
  border-right: solid 1rpx rgb(244, 244, 244);
  padding: 0 2vw 0 2vw;
}
.reply-zone .content .main .bottom .button .heart{
  height: 4vw;
  width: 4vw;
}
.reply-zone .content .main .bottom .button .collect{
  height: 4vw;
  width: 4vw;
}
.reply-zone .content .main .bottom .button .share{
  height: 4vw;
  width: 4vw;
}
.reply-zone .content .main .bottom .button .report{
  height: 4vw;
  width: 4vw;
}
.reply-zone .content .main .comment-zone{
  width: 100%;
  padding: .5vh 0 2vh 0;
  border-top: solid 1rpx rgb(244, 244, 244);
}
.reply-zone .content .main .comment-zone .comment{
  font-size: 28rpx;
  padding: 0 0 .5vh 0;
}
.load-more {
  width: 65%;
  margin: 20rpx auto;
  font-size: 14px;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.load-loading {
  margin: 0 5px;
  width: 40rpx;
  height: 40rpx;
  /* display: inline-block;
  vertical-align: middle; */
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.load-tips {
  display: inline-block;
  vertical-align: middle;
}

.load-end {
  width: 65%;
  margin: 20rpx auto;
  font-size: 14px;
  text-align: center;
}