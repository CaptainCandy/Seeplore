/* miniprogram/pages/mine/applyCheck.wxss */
.container{
  width: 100%;
}
.title{
  font-size: 48rpx;
  text-align: center;
  padding: 4vw 0 4vw 0;
}
.applylist{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.applylist .apply{
  padding: 2vw 2vw 2vw 2vw;
  width: 100%;
  border-top: solid 2rpx rgb(244, 244, 244);
}
.applylist .apply .time{
  margin: 2vw 0 3vw 2vw;
  border-left: solid 1vw rgb(39, 96, 202);
  font-size: 36rpx;
  padding-left: 2vw;
}
.applylist .apply .content{
  margin: 0 4vw 3vw 4vw;
  font-size: 32rpx;
}
.applylist .apply .buttons{
  margin: 0 4vw 3vw 4vw;
  font-size: 32rpx;
  display: flex;
}
.applylist .apply .buttons .button{
  padding: 2vw 4vw 2vw 4vw;
  margin-right: 6vw;
  border-radius: 5rpx;
  color: #fff;
}