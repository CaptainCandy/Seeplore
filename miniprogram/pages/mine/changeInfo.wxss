/* miniprogram/pages/mine/changeInfo.wxss */
.container{
  width: 100%;
}
.body{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.body .tips{
  font-size: 32rpx;
  color: rgb(182, 182, 182);
  margin: 3vh 0 4vh 0;
}
.body .input-zone{
  font-size: 36rpx;
  width: 95%;
  padding: 2vw 0 2vw 0;
  border-top: solid 1vw rgb(244, 244, 244);
  display: flex;
  align-items: center;
}
.body .input-zone .title{
  width: 43%;
  text-align: right;
  padding-right: 2vw;
}
.body .input-zone .input{
  width: 57%;
  padding: 4rpx 0 0 2vw;
}
.body .input-zone .textarea-box{
  width: 57%;
  padding: 4rpx 0 0 2vw;
}
.body .input-zone .textarea-box .textarea{
  width: 100%;
  height: 12vh;
}
.body .button{
  margin-top: 3vh;
  width: 95%;
  background-color: #409EFF;
  color: #fff;
  text-align: center;
  padding: 2vw 0 2vw 0;
  border-radius: 8rpx;
}