/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.postList {
  padding: .5rpx .6rpx .3rpx;
}
.postPre_block{
  width: 90vw;
  padding: 20rpx 30rpx 20rpx 30rpx;
  margin: 8rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}
.postPre_portrait_box{
  display: inline-block;
}
.postPre_portrait{
  width: 60rpx;
  height: 60rpx;
  margin: 0 20rpx 0 0;
  border-radius: 50%;
}
.postPre_head{
  display: inline-block;
}
.postPre_head .postPre_nickname{
  height: 30rpx;
  color: rgb(39, 96, 202);
  font-size: 24rpx;
  display: inline-block;
  padding: 0 0 0 0;
  margin: 0 20rpx 0 0;
}
.postPre_head .postPre_date{
  height: 30rpx;
  color: gray;
  font-size: 24rpx;
  display: inline-block;
  padding: 0 0 0 0;
}
.postPre_head .postPre_title{
  height: 30rpx;
  color: black;
  font-size: 30rpx;
  display: flex;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
}
.postPre_abstract{
  color: #666666;
  font-size: 36rpx;
  margin: 10rpx 0 0 0;
}
